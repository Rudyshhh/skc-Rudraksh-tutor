{
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    // "outDir": "lib",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"]
    }
  }
}